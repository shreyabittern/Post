<h1>posts</h1>

<%= render 'form', post: @post %>
<table id="dttb" class="table table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Image</th>
        <th>Action</th>
      </tr>
    </thead>

    <tbody>
      <% posts.each do |post| %>
        <tr>
          
          <td><%= post.name %></td>
          <td><%= post.description %></td>
          <td><%= image_tag post.image_url rescue nil %></td>
          <td><%= link_to 'Show', post %>
          <%= link_to 'Edit', edit_post_path(post) %>
          <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, 
            :remote => true %></td>
        </tr>
      <% end %>
  </table>
 <div style="margin-left: 40%"> <%= will_paginate posts %></div>
