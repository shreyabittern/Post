<h1>posts</h1>
<%= render 'form', post: @post %>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>

      <% posts.each do |post| %>
        <tr>
          <td><%= post.name %></td>
          <td><%= post.description %></td>
          <td><%= link_to 'Show', post %></td>
          <td><%= link_to 'Edit', edit_post_path(post) %></td>
          <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, 
            :remote => true %></td>
        </tr>
      <% end %>
      
        
    </tbody>
  </table>

  <br>

  <%= link_to 'New post', new_post_path %>